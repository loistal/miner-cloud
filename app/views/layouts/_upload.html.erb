<div class="modal fade" id="uploadArticleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-body">
        <div align="center" class="title-modal">Import an article 📗</div>
        <%= form_for(:article, html: {role: "form", id: "upload-modal-form"}, url: upload_path) do |f| %>
        <div class="form-group">
          


          <div class="container-fluid">
            <div class="row">
              <div id="title-upload" class="col-md-6">
          

              <%= hidden_field_tag(:user, current_user) %>


                <%= f.text_field :title, placeholder: "Title of the article", class: "form-control" %>
              </div>

              <div class="col-md-3">
               <!-- Change the hidden field depending on the dropdown that follows -->
              <%= select_tag(:language, raw('
                <option value="english">🇺🇸 English</option>
                <option value="spanish">🇪🇸 Spanish</option>
                <option value="french">🇫🇷 French</option>
                <option value="korean">🇰🇷 Korean</option>
                <option value="german">🇩🇪 German</option>
                <option value="italian">🇮🇹 Italian</option>
                <option value="russian">🇷🇺 Russian</option>
                <option value="portuguese">🇵🇹 Portuguese</option>
                <option value="hindi">🇮🇳 Hindi</option>
                <option value="dutch">🇳🇱 Dutch</option>
                <option value="turkish">🇹🇷 Turkish</option>
                <option value="polish">🇵🇱 Polish</option>
              '), class: "form-control",) %>
              </div>

              <div class="col-md-3">
               <!-- Change the hidden field depending on the dropdown that follows -->
				<%= select_tag(:difficulty, raw('
                <option value="1">😁 Beginner</option>
                <option value="2">🏃‍♂️ Upper Beginner</option>
                <option value="3">👨‍🎓 Intermediate</option>
                <option value="4">🏋️‍♂️ Upper Intermediate</option>
                <option value="5">🔥 Advanced</option>
              '), class: "form-control",) %>
              </div>

          </div>
        </div>
        
              
        <%= f.text_area :lesson, placeholder: "Paste the article here" , class: "form-control", id: "article-textarea" %>

        <%= f.button "Upload", class: "btn btn-primary miner-button full-width" %>

      </div>
      <% end %>
    </div>

  </div>
</div>
</div>