<div class="hero-miner">
  <div id="hero-container" class="container">
    <div class="row">
      <div class="col-md-7">
       <h1 id="main-title">Learn languages using 
       content you 😍</h1>
     </div>
     <div class="col-md-1">

     </div>
     <div class="col-md-4">
       <div class="video-enroll">
        <div data-toggle="modal" data-target="#presentation-modal">
          <%= image_tag("video-explainer.jpg", :alt => "video", :class => "video-explainer") %>
        </div>
        <button type="button" class="btn btn-primary miner-button full-width" data-toggle="modal" data-target="#exampleModal" data-whatever="">Start learning</button>
      </div>

      <!-- video modal that pops up when the user clicks on the image -->
      <div id="presentation-modal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
  
            <div id="video-modal-body" class="modal-body">
              <iframe width="560" height="315" src="https://www.youtube.com/embed/tCUBb_BL-yw" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
   
          </div>
        </div>
      </div>
      <!-- / end video modal -->

    </div>
  </div>

</div>
</div>

<div id="first-section" class="container">
	<div class="row">
		<div class="col-md-8">
			<h2 id="home-h2">Read and learn 🚀</h2>		
			<p class="reason-text">Polyglot lab allows you to learn any language through <b>immersion</b> and <b>spaced repetition</b>.</p>
      <button type="button" class="btn btn-primary miner-button" data-toggle="modal" data-target="#exampleModal" data-whatever="">Create a free account</button>

    </div>
    <div class="col-md-4">
      <p align="center" id="icon-home">🌎</p>
    </div>
  </div>
</div>

<%= render 'layouts/subscription' %>
<%= render 'layouts/login' %>

