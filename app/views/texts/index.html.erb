<%= render 'layouts/header' %>

<h1 align="center">📕 Library</h1>

<div class="container">
	<div class="row choose-text">
		<div class="col-md-6">

			<b>🏗 Choose a text</b>

			<div id="dropdown-level" class="dropdown">
				<button class="btn btn-secondary dropdown-toggle dropdown-miner" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					Difficulty level
				</button>
				<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
					<a class="dropdown-item" href="#">🚀 Advanced</a>
					<a class="dropdown-item" href="#">🔥 Upper Intermediate</a>
					<a class="dropdown-item" href="#">🚴‍♀️ Intermediate</a>
					<a class="dropdown-item" href="#">🏝 Upper Beginner</a>
					<a class="dropdown-item" href="#">🐣 Beginner</a>

				</div>
			</div>	

		</div>
		<div class="col-md-6">
			<b>🌎 Upload your own</b>
			<button id="upload-text" type="button" class="btn btn-primary miner-button" data-toggle="modal" data-target="#exampleModal" data-whatever="">Upload your own</button>

		</div>
	</div>

	<%= render @articles %>


</div>

